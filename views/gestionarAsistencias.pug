extends layout

block content
    .container-fluid 
        br
        h1.text-center Asistencias Actuales
        br
        h2 Listado de asistencias
        table#TablaParaExportar.table.table-dark.table-hover.table-striped
            thead 
                tr
                    th(scope='col') Num 
                    th(scope='col') email
                    th(scope='col') Nombre
                    th(scope='col') Apellido 
                    th(scope='col') Fecha
            tbody
                each asistente, index in asistentes  
                    tr 
                        th(scope='row') #{index + 1}
                        td #{asistente.email}
                        td #{asistente.nombre}
                        td #{asistente.apellido}
                        td #{asistente.horarioClase.getDate() + "/" + (asistente.horarioClase.getMonth() + 1) + "/" + asistente.horarioClase.getFullYear()}          
        br
        a.btn.btn-dark(href=`/profesor/Materia/${materia.id}/ExportarAsistencias`) Exportar Asistencias
        br